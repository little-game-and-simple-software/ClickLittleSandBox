<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/error_root"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="为防止软件出现问题，特意添加此测试页面"
		android:textAppearance="?android:attr/textAppearanceLarge" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="reset"
		android:text="重置此游戏" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="enter"
		android:text="进入游戏" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="get"
		android:text="获取游戏数据信息" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/button4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:onClick="testFullAd"
			android:text="测试全屏广告" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:onClick="testBanner"
			android:text="测试banner广告" />

		<Button
			android:id="@+id/button2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:onClick="testReward"
			android:text="测试激励视频" />

		<Button
			android:id="@+id/button3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:onClick="testInter"
			android:text="测试静态插屏" />

	</LinearLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:id="@+id/root"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="纯文本:" />

			<TextView
				android:id="@+id/gameData"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Text" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="arraylist:" />

			<TextView
				android:id="@+id/arraylist"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Text" />

		</LinearLayout>

	</ScrollView>

	<TextView
		android:id="@+id/textView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="TextView" />

	<LinearLayout
		android:id="@+id/test_banner"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"></LinearLayout>

</LinearLayout>

