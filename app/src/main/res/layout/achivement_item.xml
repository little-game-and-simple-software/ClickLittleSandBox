<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#DEC6C6">

        <ImageView
            android:id="@+id/achive_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/auto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/achive_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/achive_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动点击-释放双手"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="获得方式"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/achive_how_to_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用一次自动点击"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/achive_progess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="0"
                    android:text="(0/1)"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/achive_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="立即获得此成就" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
